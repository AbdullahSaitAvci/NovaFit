@page
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* NovaFit Renk Paleti */
    :root {
        --nova-yellow: #FFD200;
    }

    /* Giriş Kartı */
    .login-card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.15); /* Daha yumuşak gölge */
        overflow: hidden;
    }

    /* Kart Başlığı */
    .login-header {
        background: linear-gradient(135deg, #1e1e24 0%, #2b2b35 100%);
        padding: 2rem;
        text-align: center;
        border-bottom: 3px solid var(--nova-yellow);
    }

    /* Kart Gövdesi (Tema Uyumlu) */
    .login-body {
        padding: 2.5rem;
    }

    /* Input Alanları */
    .form-floating > .form-control {
        border-radius: 0.5rem;
        border: 1px solid rgba(128,128,128,0.3);
    }

        .form-floating > .form-control:focus {
            border-color: var(--nova-yellow);
            box-shadow: 0 0 0 0.25rem rgba(255, 210, 0, 0.25);
        }

    /* Giriş Butonu */
    .btn-nova-login {
        background-color: var(--nova-yellow);
        color: #000;
        font-weight: 700;
        text-transform: uppercase;
        border: none;
        transition: transform 0.2s;
    }

        .btn-nova-login:hover {
            background-color: #e6bd00;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 210, 0, 0.3);
        }

    /* Linkler */
    .link-nova {
        color: var(--nova-yellow);
        font-weight: 700;
        text-decoration: none;
        transition: color 0.2s;
    }

    [data-bs-theme="light"] .link-nova {
        color: #d63384; /* Light modda pembe/mor daha iyi okunur */
    }

    .link-nova:hover {
        text-decoration: underline;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5 col-lg-4">

        <div class="login-card bg-body-tertiary">

            <div class="login-header">
                <h2 class="fw-bold text-white m-0" style="font-family: 'Oswald', sans-serif; letter-spacing: 1px;">
                    NOVA<span style="color: var(--nova-yellow);">FIT</span>
                </h2>
                <span class="text-white-50 small text-uppercase fw-bold">Hesabına Giriş Yap</span>
            </div>

            <div class="login-body">
                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center small rounded-3 mb-4" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control bg-body-secondary" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted">E-Posta Adresi</label>
                        <span asp-validation-for="Input.Email" class="text-danger small ms-1"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control bg-body-secondary" autocomplete="current-password" placeholder="password" />
                        <label asp-for="Input.Password" class="text-muted">Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger small ms-1"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="Input.RememberMe" style="cursor: pointer;" />
                        <label class="form-check-label text-muted small" asp-for="Input.RememberMe" style="cursor: pointer;">
                            Beni Hatırla
                        </label>
                    </div>

                    <div class="d-grid mb-4">
                        <button id="login-submit" type="submit" class="btn btn-nova-login btn-lg py-3 rounded-pill">
                            GİRİŞ YAP <i class="bi bi-box-arrow-in-right ms-2"></i>
                        </button>
                    </div>

                    <div class="text-center border-top pt-3">
                        <p class="mb-0 text-muted small">
                            Hesabın yok mu? <br>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-nova">
                                HEMEN KAYIT OL
                            </a>
                        </p>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}