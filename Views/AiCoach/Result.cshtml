@model NovaFit.Models.AiResponseViewModel
@{
    ViewData["Title"] = "AI Analiz Sonucu";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-7 mb-4">
            <div class="card shadow border-0 h-100">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-list-check"></i> Sana Özel Tavsiyeler</h4>
                </div>
                <div class="card-body bg-light">
                    <div class="p-3">
                        @Html.Raw(Model.DietPlan)
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5 mb-4">
            <div class="card shadow border-0 sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-image"></i> Hedeflediğimiz Sen</h4>
                </div>
                <div class="card-body text-center p-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow-lg border border-3 border-white" alt="AI Generated Fitness Goal" />
                        <p class="mt-3 text-muted small fst-italic">
                            *Bu görsel, yapay zeka tarafından senin fiziksel özelliklerine ve hedeflerine göre üretilmiştir.
                        </p>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> Resim oluşturulamadı. Servis yoğun olabilir.
                        </div>
                    }
                </div>
                <div class="card-footer bg-white border-0">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Yeni Analiz Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>