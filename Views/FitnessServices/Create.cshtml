@model NovaFit.Models.FitnessService

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<style>
    :root {
        --nova-yellow: #FFD200;
        --nova-font: 'Oswald', sans-serif;
    }

    /* --- ADAPTİF RENKLER --- */

    /* 1. Aydınlık Mod (Default) */
    .form-card {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        color: #333;
    }

    .form-header {
        background-color: #f8f9fa;
        color: #333;
        border-bottom: 1px solid #e0e0e0;
    }

    .form-control, .input-group-text {
        background-color: #fff;
        color: #333;
        border: 1px solid #ced4da;
    }

    .form-label {
        color: #555;
    }

    /* 2. Karanlık Mod */
    [data-bs-theme="dark"] .form-card {
        background-color: #242424;
        border: 1px solid #333;
        color: #fff;
    }

    [data-bs-theme="dark"] .form-header {
        background-color: #1a1a1a;
        color: var(--nova-yellow);
        border-bottom: 1px solid #333;
    }

    [data-bs-theme="dark"] .form-control, [data-bs-theme="dark"] .input-group-text {
        background-color: #1a1a1a;
        border: 1px solid #444;
        color: #fff;
    }

        [data-bs-theme="dark"] .form-control:focus {
            border-color: var(--nova-yellow);
            box-shadow: 0 0 0 0.25rem rgba(255, 210, 0, 0.25);
        }

    [data-bs-theme="dark"] .form-label {
        color: #b0b0b0;
    }

    /* --- ORTAK TASARIM --- */
    .page-title {
        font-family: var(--nova-font);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 2rem;
        margin: 0;
    }

    .form-card {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .form-header {
        padding: 20px;
        text-align: center;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .form-control, .input-group-text {
        padding: 12px;
        /* input-group olduğu için border-radius'u Bootstrap yönetecek */
    }

    /* Butonlar */
    .btn-save {
        background-color: var(--nova-yellow);
        color: #000 !important;
        font-family: var(--nova-font);
        font-weight: 700;
        text-transform: uppercase;
        border: none;
        padding: 12px;
        border-radius: 10px;
        transition: 0.3s;
        width: 100%;
        display: block;
        letter-spacing: 1px;
    }

        .btn-save:hover {
            background-color: #fff;
            box-shadow: 0 0 20px rgba(255, 210, 0, 0.5);
            transform: translateY(-2px);
        }

    .btn-back {
        background-color: transparent;
        border: 2px solid #6c757d;
        color: #6c757d;
        font-family: var(--nova-font);
        font-weight: 700;
        text-transform: uppercase;
        padding: 10px;
        border-radius: 10px;
        transition: 0.3s;
        text-decoration: none;
        width: 100%;
        display: block;
        text-align: center;
        margin-top: 10px;
    }

        .btn-back:hover {
            background-color: #6c757d;
            color: #fff;
        }

    [data-bs-theme="dark"] .btn-back {
        border-color: #444;
        color: #888;
    }

        [data-bs-theme="dark"] .btn-back:hover {
            background-color: #444;
            color: #fff;
        }

</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="form-card">

                <div class="form-header">
                    <h3 class="page-title">
                        <i class="bi bi-patch-plus-fill me-2"></i> YENİ HİZMET PAKETİ
                    </h3>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="ServiceName" class="form-label">HİZMET ADI</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-activity"></i></span>
                                <input asp-for="ServiceName" class="form-control" placeholder="Örn: Reformer Pilates, Yoga Başlangıç..." />
                            </div>
                            <span asp-validation-for="ServiceName" class="text-danger small"></span>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">ÜCRET (DERS BAŞI)</label>
                                <div class="input-group">
                                    <span class="input-group-text fw-bold">₺</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DurationMinutes" class="form-label">SÜRE</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-stopwatch-fill"></i></span>
                                    <input asp-for="DurationMinutes" class="form-control" type="number" placeholder="60" />
                                    <span class="input-group-text">DK</span>
                                </div>
                                <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label asp-for="Description" class="form-label">HİZMET AÇIKLAMASI</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Bu hizmetin içeriği, kimler için uygun olduğu ve faydaları hakkında kısa bilgi verin..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn-save">
                                <i class="bi bi-check-lg me-2"></i> HİZMETİ KAYDET
                            </button>
                            <a asp-action="Index" class="btn-back">
                                <i class="bi bi-arrow-left me-2"></i> LİSTEYE GERİ DÖN
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
