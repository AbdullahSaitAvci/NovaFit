@model NovaFit.Models.FitnessService

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0 text-center fw-bold">
                        <i class="bi bi-patch-plus-fill me-2"></i> Yeni Hizmet Paketi Oluştur
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="ServiceName" class="form-label fw-bold">
                                <i class="bi bi-activity"></i> Hizmet Adı
                            </label>
                            <input asp-for="ServiceName" class="form-control form-control-lg" placeholder="Örn: Reformer Pilates, Yoga Başlangıç..." />
                            <span asp-validation-for="ServiceName" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">

                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold">
                                    <i class="bi bi-tag-fill"></i> Ücret (Ders Başı)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light fw-bold">₺</span>
                                    <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DurationMinutes" class="form-label fw-bold">
                                    <i class="bi bi-stopwatch-fill"></i> Süre
                                </label>
                                <div class="input-group">
                                    <input asp-for="DurationMinutes" class="form-control form-control-lg" type="number" placeholder="60" />
                                    <span class="input-group-text bg-light">dakika</span>
                                </div>
                                <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-file-text"></i> Hizmet Açıklaması
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Bu hizmetin içeriği, kimler için uygun olduğu ve faydaları hakkında kısa bilgi verin..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm hover-effect">
                                <i class="bi bi-check-circle-fill"></i> Hizmeti Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary mt-2">
                                <i class="bi bi-arrow-left"></i> Listeye Geri Dön
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}