@model NovaFit.Models.FitnessService

@{
    ViewData["Title"] = "Hizmeti Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="background-color: #242424; color: #fff;">

                <div class="card-header text-center py-4" style="background-color: #dc3545; border-bottom: 1px solid #b02a37;">
                    <h2 class="m-0 fw-bold text-white text-uppercase">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Silme İşlemi
                    </h2>
                    <p class="mb-0 text-white-50 mt-2">Bu hizmet paketini silmek istediğine emin misin?</p>
                </div>

                <div class="card-body p-5">
                    <div class="row align-items-center">
                        
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="rounded-circle d-flex align-items-center justify-content-center mx-auto shadow border border-3 border-danger" 
                                 style="width: 150px; height: 150px; background-color: #1a1a1a;">
                                <i class="bi bi-activity text-danger" style="font-size: 5rem;"></i>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <h3 class="fw-bold text-uppercase" style="color: #FFD200;">@Model.ServiceName</h3>
                            
                            <p class="mb-1 text-white-50">
                                <i class="bi bi-tag-fill me-2"></i><strong>Ücret:</strong> ₺@Model.Price
                            </p>
                            
                            <p class="mb-2 text-white-50">
                                <i class="bi bi-stopwatch-fill me-2"></i><strong>Süre:</strong> @Model.DurationMinutes Dakika
                            </p>
                            
                            <div class="mb-3 text-white-50" style="font-size: 0.9rem;">
                                <i class="bi bi-card-text me-2"></i><strong>Açıklama:</strong>
                                @if (string.IsNullOrWhiteSpace(Model.Description))
                                {
                                    <span class="fst-italic">Bu hizmet için açıklama bulunmamaktadır.</span>
                                }
                                else
                                {
                                    <span>@Model.Description</span>
                                }
                            </div>

                            <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <strong>Dikkat:</strong> Bu işlem geri alınamaz. Hizmet paketi sistemden kalıcı olarak silinecektir.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer p-4 d-flex justify-content-between" style="background-color: #1a1a1a; border-top: 1px solid #333;">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill fw-bold">
                        <i class="bi bi-arrow-left me-2"></i> İPTAL ET
                    </a>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="FitnessServiceId" />
                        <button type="submit" class="btn btn-danger px-5 rounded-pill fw-bold shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i> EVET, SİL
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
