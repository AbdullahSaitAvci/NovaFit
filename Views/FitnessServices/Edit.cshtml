@model NovaFit.Models.FitnessService

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header bg-warning bg-gradient text-dark py-3">
                    <h3 class="card-title mb-0 text-center fw-bold">
                        <i class="bi bi-pencil-square me-2"></i> Hizmet Bilgilerini Güncelle
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">

                        <input type="hidden" asp-for="FitnessServiceId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="ServiceName" class="form-label fw-bold">
                                <i class="bi bi-activity"></i> Hizmet Adı
                            </label>
                            <input asp-for="ServiceName" class="form-control form-control-lg" />
                            <span asp-validation-for="ServiceName" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">

                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label fw-bold">
                                    <i class="bi bi-tag-fill"></i> Ücret (Ders Başı)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light fw-bold">₺</span>
                                    <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DurationMinutes" class="form-label fw-bold">
                                    <i class="bi bi-stopwatch-fill"></i> Süre
                                </label>
                                <div class="input-group">
                                    <input asp-for="DurationMinutes" class="form-control form-control-lg" type="number" />
                                    <span class="input-group-text bg-light">dakika</span>
                                </div>
                                <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">
                                <i class="bi bi-file-text"></i> Hizmet Açıklaması
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-save-fill"></i> Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary mt-2">
                                <i class="bi bi-x-circle"></i> İptal ve Geri Dön
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}