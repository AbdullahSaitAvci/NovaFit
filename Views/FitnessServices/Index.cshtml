@model IEnumerable<NovaFit.Models.FitnessService>

@{
    ViewData["Title"] = "Hizmetler ve Fiyatlar";
}

<style>
    :root {
        --nova-yellow: #FFD200;
        --nova-font: 'Oswald', sans-serif;
    }

    /* --- ADAPTİF RENKLER --- */

    /* 1. Aydınlık Mod (Default) */
    .service-card {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        color: #333;
    }

    .page-title {
        color: #333;
    }

    .service-title {
        color: #000;
    }

    .price-period {
        color: #666;
    }

    .service-meta {
        background-color: #f8f9fa;
        color: #333;
    }

    .service-desc {
        color: #555;
    }

    /* 2. Karanlık Mod (Dark) */
    [data-bs-theme="dark"] .service-card {
        background-color: #242424;
        border: 1px solid #333;
        color: #fff;
    }

    [data-bs-theme="dark"] .page-title {
        color: #fff;
    }

    [data-bs-theme="dark"] .service-title {
        color: #fff;
    }

    [data-bs-theme="dark"] .price-period {
        color: #b0b0b0;
    }

    [data-bs-theme="dark"] .service-meta {
        background-color: rgba(255, 255, 255, 0.05);
        color: #fff;
    }

    [data-bs-theme="dark"] .service-desc {
        color: #b0b0b0;
    }

    /* --- ORTAK YAPI --- */
    .page-title {
        font-family: var(--nova-font);
        font-weight: 700;
        text-transform: uppercase;
        font-size: 3rem;
        text-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .service-card {
        border-radius: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        position: relative;
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
            border-color: var(--nova-yellow);
        }

        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background-color: var(--nova-yellow);
        }

    .service-header {
        padding: 30px 20px 10px 20px;
        text-align: center;
    }

    .service-title {
        font-family: var(--nova-font);
        font-size: 1.8rem;
        text-transform: uppercase;
        margin: 0;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .service-price {
        text-align: center;
        padding: 10px 0;
        color: var(--nova-yellow);
        font-family: var(--nova-font);
    }

    .price-amount {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1;
    }

    .price-currency {
        font-size: 1.5rem;
        vertical-align: super;
    }

    .price-period {
        font-size: 1rem;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .service-body {
        padding: 20px 30px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .service-meta {
        padding: 8px 15px;
        border-radius: 10px;
        font-weight: 600;
        margin-bottom: 20px;
        display: inline-block;
    }

    .service-desc {
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    .btn-service {
        margin-top: auto;
        background-color: transparent;
        border: 2px solid var(--nova-yellow);
        color: var(--nova-yellow) !important;
        font-family: var(--nova-font);
        text-transform: uppercase;
        padding: 12px 30px;
        border-radius: 5px;
        font-weight: 700;
        transition: 0.3s;
        text-decoration: none;
        width: 100%;
        display: block;
        letter-spacing: 1px;
    }

        .btn-service:hover {
            background-color: var(--nova-yellow);
            color: #000 !important;
            box-shadow: 0 0 20px rgba(255, 210, 0, 0.4);
        }

    .btn-create-new {
        background-color: var(--nova-yellow);
        color: #000;
        font-family: var(--nova-font);
        text-transform: uppercase;
        font-weight: 700;
        border: none;
        padding: 10px 25px;
        border-radius: 50px;
        transition: 0.3s;
    }

        .btn-create-new:hover {
            transform: scale(1.05);
        }

    .admin-tools {
        margin-top: 15px;
        border-top: 1px solid rgba(128,128,128,0.2);
        padding-top: 15px;
        width: 100%;
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .admin-link {
        font-size: 0.85rem;
        text-decoration: none;
        text-transform: uppercase;
        font-weight: 700;
        transition: 0.2s;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="page-title">HİZMET VE <span style="color: var(--nova-yellow);">FİYATLAR</span></h1>
        <p class="text-muted mx-auto col-md-8" style="font-size: 1.1rem;">
            Hedeflerine en uygun programı seç, profesyonel ekipmanlar ve uzman eğitmenlerle değişimi başlat.
        </p>

        @if (User.IsInRole("Admin"))
        {
            <div class="mt-4">
                <a asp-action="Create" class="btn btn-create-new">
                    <i class="bi bi-plus-lg me-1"></i> YENİ HİZMET EKLE
                </a>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary text-center p-5 rounded-4">
            <i class="bi bi-wallet2 display-4 mb-3"></i>
            <h3>Henüz Hizmet Eklenmedi</h3>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="service-card">
                        <div class="service-header">
                            <h3 class="service-title">@item.ServiceName</h3>
                        </div>
                        <div class="service-price">
                            <span class="price-amount">@item.Price.ToString("N0")</span>
                            <span class="price-currency">₺</span>
                            <div class="price-period">/ DERS</div>
                        </div>
                        <div class="service-body">
                            <div class="service-meta">
                                <i class="bi bi-stopwatch me-1 text-warning"></i> @item.DurationMinutes DK <span class="fw-normal opacity-75">ANTRENMAN</span>
                            </div>
                            <p class="service-desc">@item.Description</p>

                            <a asp-controller="Trainers" asp-action="Index" asp-route-searchString="@item.ServiceName" class="btn-service">
                                <i class="bi bi-person-video3 me-2"></i> EĞİTMENLERİ GÖR
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="admin-tools">
                                    <a asp-action="Edit" asp-route-id="@item.FitnessServiceId" class="admin-link text-warning">DÜZENLE</a>
                                    <span class="text-muted">|</span>
                                    <a asp-action="Delete" asp-route-id="@item.FitnessServiceId" class="admin-link text-danger">SİL</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>