@model IEnumerable<NovaFit.Models.FitnessService>

@{
    ViewData["Title"] = "Hizmetler ve Fiyatlar";
}

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Hizmetlerimiz</h1>
        <p class="lead text-muted">Size en uygun programı seçin ve hemen başlayın.</p>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary mt-2">Yeni Hizmet Ekle</a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm" role="alert">
            <h4 class="alert-heading mb-2">😔 Henüz Hizmet Eklenmemiş</h4>
            <p class="mb-0">Şu anda aktif bir spor paketimiz bulunmuyor. Lütfen daha sonra tekrar kontrol ediniz.</p>
        </div>
    }
    else {
    <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow border-0" style="transition: transform 0.2s;">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h4 class="my-0 fw-normal">@item.ServiceName</h4>
                    </div>
                    <div class="card-body d-flex flex-column text-center">
                        <h1 class="card-title pricing-card-title">@item.Price.ToString("C0") <small class="text-muted fw-light">/ ders</small></h1>
                        <ul class="list-unstyled mt-3 mb-4 flex-grow-1">
                            <li class="mb-2">⏱ <strong>@item.DurationMinutes dk</strong> süren antrenman</li>
                            <li class="text-muted">@item.Description</li>
                        </ul>

                        <button type="button" class="w-100 btn btn-lg btn-outline-primary mt-auto">Randevu Al</button>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mt-3">
                                <a asp-action="Edit" asp-route-id="@item.FitnessServiceId" class="text-warning text-decoration-none small mx-2">Düzenle</a>
                                <span class="text-muted">|</span>
                                <a asp-action="Delete" asp-route-id="@item.FitnessServiceId" class="text-danger text-decoration-none small mx-2">Sil</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div> 
    }
</div>