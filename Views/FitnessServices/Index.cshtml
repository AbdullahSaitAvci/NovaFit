@model IEnumerable<NovaFit.Models.FitnessService>

@{
    ViewData["Title"] = "Hizmetler ve Fiyatlar";
}

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Hizmetlerimiz</h1>
        <p class="lead text-muted">Hedeflerinize en uygun programı seçin ve uzman eğitmenlerimizle tanışın.</p>

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success mt-2">
                <i class="bi bi-plus-lg"></i> Yeni Hizmet Ekle
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm py-4" role="alert">
            <h4 class="alert-heading mb-2">😔 Henüz Hizmet Eklenmemiş</h4>
            <p class="mb-0">Şu anda aktif bir spor paketimiz bulunmuyor. Lütfen daha sonra tekrar kontrol ediniz.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect">

                        <div class="card-header bg-primary text-white text-center py-3">
                            <h4 class="my-0 fw-normal">@item.ServiceName</h4>
                        </div>

                        <div class="card-body d-flex flex-column text-center">
                            <h1 class="card-title pricing-card-title text-dark">
                                @item.Price.ToString("C0") <small class="text-muted fw-light fs-5">/ ders</small>
                            </h1>

                            <ul class="list-unstyled mt-3 mb-4 flex-grow-1">
                                <li class="mb-2">
                                    <i class="bi bi-stopwatch text-primary"></i> <strong>@item.DurationMinutes dk</strong> süren antrenman
                                </li>
                                <li class="text-muted px-2">@item.Description</li>
                            </ul>

                            <a asp-controller="Trainers"
                               asp-action="Index"
                               asp-route-searchString="@item.ServiceName"
                               class="w-100 btn btn-lg btn-outline-primary mt-auto">
                                <i class="bi bi-person-video3"></i> Eğitmenleri Gör
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="mt-3 border-top pt-2">
                                    <a asp-action="Edit" asp-route-id="@item.FitnessServiceId" class="btn btn-sm btn-link text-warning text-decoration-none">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <span class="text-muted">|</span>
                                    <a asp-action="Delete" asp-route-id="@item.FitnessServiceId" class="btn btn-sm btn-link text-danger text-decoration-none">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>