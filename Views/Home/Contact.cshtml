@{
    ViewData["Title"] = "İletişim";
}

<style>
    :root {
        --nova-yellow: #FFD200;
    }

    /* İkonlar her iki modda da sarı kalsın */
    .icon-nova {
        color: var(--nova-yellow);
        font-size: 1.5rem;
    }

    /* Gönder butonu tasarımı */
    .btn-nova-send {
        background-color: var(--nova-yellow);
        color: #000;
        font-weight: 700;
        border: none;
        transition: all 0.2s;
    }

        .btn-nova-send:hover {
            background-color: #e6bd00;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 210, 0, 0.3);
        }
</style>

<div class="container py-5">

    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-uppercase" style="font-family: 'Oswald', sans-serif;">
            BİZE <span style="color: var(--nova-yellow);">ULAŞIN</span>
        </h1>
        <p class="lead text-muted">
            Sorularınız mı var? Aşağıdaki formdan veya iletişim bilgilerimizden bize yazın.
        </p>
    </div>

    <div class="row g-4 align-items-stretch">

        <div class="col-lg-5">
            <div class="card h-100 border-0 shadow-sm bg-body-tertiary rounded-4 overflow-hidden">
                <div class="card-body p-4 p-md-5 d-flex flex-column justify-content-center">

                    <h3 class="fw-bold mb-4 text-uppercase">İletişim Bilgileri</h3>

                    <div class="d-flex mb-4">
                        <div class="me-3"><i class="bi bi-geo-alt-fill icon-nova"></i></div>
                        <div>
                            <h5 class="fw-bold mb-1">Adres</h5>
                            <p class="text-muted mb-0">Sakarya Üniversitesi<br>Bilgisayar Müh. Bölümü<br>Serdivan / SAKARYA</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="me-3"><i class="bi bi-telephone-fill icon-nova"></i></div>
                        <div>
                            <h5 class="fw-bold mb-1">Telefon</h5>
                            <p class="text-muted mb-0">+90 (264) 295 55 55</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="me-3"><i class="bi bi-envelope-fill icon-nova"></i></div>
                        <div>
                            <h5 class="fw-bold mb-1">E-Posta</h5>
                            <p class="text-muted mb-0">info@novafit.com</p>
                        </div>
                    </div>

                    <hr class="opacity-25 my-4">

                    <div>
                        <h5 class="fw-bold mb-3"><i class="bi bi-clock me-2 text-warning"></i>Çalışma Saatleri</h5>
                        <ul class="list-unstyled text-muted small mb-0">
                            <li class="d-flex justify-content-between mb-1"><span>Hafta İçi:</span> <span>06:00 - 23:00</span></li>
                            <li class="d-flex justify-content-between mb-1"><span>Cumartesi:</span> <span>08:00 - 22:00</span></li>
                            <li class="d-flex justify-content-between"><span>Pazar:</span> <span>09:00 - 20:00</span></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h3 class="fw-bold mb-4">Mesaj Gönder</h3>

                    <form onsubmit="event.preventDefault(); alert('Mesajınız başarıyla gönderildi!');">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted text-uppercase">Adınız</label>
                                <input type="text" class="form-control form-control-lg bg-body-secondary border-0" placeholder="Adınız" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-muted text-uppercase">Soyadınız</label>
                                <input type="text" class="form-control form-control-lg bg-body-secondary border-0" placeholder="Soyadınız" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted text-uppercase">E-Posta</label>
                                <input type="email" class="form-control form-control-lg bg-body-secondary border-0" placeholder="ornek@mail.com" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold small text-muted text-uppercase">Mesajınız</label>
                                <textarea class="form-control form-control-lg bg-body-secondary border-0" rows="5" placeholder="Mesajınızı buraya yazın..." required></textarea>
                            </div>
                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-nova-send w-100 py-3 text-uppercase rounded-pill shadow-sm">
                                    <i class="bi bi-send-fill me-2"></i> Gönder
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>