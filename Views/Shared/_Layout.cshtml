                            <li class="nav-item"><a class="nav-link" asp-controller="AiCoach" asp-action="Index">AI KOÇ</a></li>
                        }

                        @if (User.IsInRole("Trainer"))
                        {
                            <li class="nav-item border-start mx-2 d-none d-lg-block" style="height:20px; opacity:0.3"></li>
                            <li class="nav-item"><a class="nav-link text-primary" asp-controller="Trainers" asp-action="ManageAppointments">YÖNETİM</a></li>
