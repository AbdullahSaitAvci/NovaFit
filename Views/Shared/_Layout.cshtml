                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">DASHBOARD</a></li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li><a class="dropdown-item" asp-controller="Trainers" asp-action="Index">ANTRENÖRLERİ YÖNET</a></li>

