                        <li class="nav-item"><a class="nav-link" asp-controller="Trainers" asp-action="Index">ANTRENÖRLER</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="FitnessServices" asp-action="Index">HİZMETLER</a></li>

