                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-nav-login" asp-area="Identity" asp-page="/Account/Login">ÜYE GİRİŞİ</a>
                            <a class="btn btn-nav-join" asp-area="Identity" asp-page="/Account/Register">BİZE KATIL</a>
                        }

                        <div class="nav-item dropdown">
                            <button class="btn btn-link nav-link dropdown-toggle theme-toggler-btn"
                                    id="bd-theme" type="button" aria-expanded="false" data-bs-toggle="dropdown"
                                    data-bs-display="static" aria-label="Toggle theme (auto)">
                                <i class="bi bi-circle-half theme-icon-active"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="bd-theme-text" style="min-width: 100px;">
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="light">
                                        <i class="bi bi-sun-fill me-2 opacity-50 theme-icon"></i> Aydınlık
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="dark">
                                        <i class="bi bi-moon-stars-fill me-2 opacity-50 theme-icon"></i> Karanlık
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item d-flex align-items-center active" data-bs-theme-value="auto">
                                        <i class="bi bi-circle-half me-2 opacity-50 theme-icon"></i> Sistem
                                    </button>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

