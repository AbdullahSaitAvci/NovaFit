@model NovaFit.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<h1>Yeni Antrenör Ekle</h1>

<h4>Antrenör Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @* ÖNEMLİ: enctype="multipart/form-data" 
            Bu özellik formun sadece metin değil, dosya (resim vb.) taşımasına izin verir.
            Resim yükleme işlemi yapılacaksa bu özellik ZORUNLUDUR.
        *@
        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Expertise" class="control-label"></label>
                <input asp-for="Expertise" class="form-control" placeholder="Örn: Vücut Geliştirme, Pilates" />
                <span asp-validation-for="Expertise" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Profil Fotoğrafı</label>
                <input type="file" name="imageFile" class="form-control" accept="image/png, image/jpeg" />
                <span class="text-muted small">Lütfen .jpg veya .png formatında bir resim seçiniz.</span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bio" class="control-label"></label>
                <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Antrenörü Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}