@model NovaFit.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0 text-center fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i> Yeni Eğitmen Oluştur
                    </h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold">
                                    <i class="bi bi-person"></i> Ad Soyad
                                </label>
                                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Örn: Ahmet Yılmaz" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Expertise" class="form-label fw-bold">
                                    <i class="bi bi-trophy"></i> Uzmanlık Alanı
                                </label>
                                <input asp-for="Expertise" class="form-control form-control-lg" placeholder="Örn: Fitness, Pilates" />
                                <span asp-validation-for="Expertise" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="bi bi-envelope"></i> E-Posta
                                </label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="ornek@novafit.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold">
                                    <i class="bi bi-telephone"></i> Telefon
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="0555 123 45 67" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-image"></i> Profil Fotoğrafı
                            </label>
                            <div class="input-group">
                                <input type="file" name="imageFile" class="form-control" accept="image/png, image/jpeg" id="inputGroupFile02">
                                <label class="input-group-text" for="inputGroupFile02">Yükle</label>
                            </div>
                            <div class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Sadece .jpg veya .png formatında, net bir fotoğraf yükleyiniz.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Bio" class="form-label fw-bold">
                                <i class="bi bi-file-text"></i> Biyografi / Özgeçmiş
                            </label>
                            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Eğitmenin tecrübelerinden ve sertifikalarından bahsedin..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm hover-effect">
                                <i class="bi bi-check-circle-fill"></i> Kaydet ve Yayınla
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary mt-2">
                                <i class="bi bi-arrow-left"></i> Listeye Geri Dön
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}