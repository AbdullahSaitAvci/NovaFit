@model NovaFit.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="background-color: #242424; color: #fff;">

                <div class="card-header text-center py-4" style="background-color: #dc3545; border-bottom: 1px solid #b02a37;">
                    <h2 class="m-0 fw-bold text-white text-uppercase">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Silme İşlemi
                    </h2>
                    <p class="mb-0 text-white-50 mt-2">Bu antrenörü silmek istediğine emin misin?</p>
                </div>

                <div class="card-body p-5">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.FullName"
                                     class="img-fluid rounded-circle shadow border border-3 border-danger"
                                     style="width: 150px; height: 150px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="/img/trainers/default_coach.png"
                                     class="img-fluid rounded-circle shadow"
                                     style="width: 150px; height: 150px; object-fit: cover;" />
                            }
                        </div>

                        <div class="col-md-8">
                            <h3 class="fw-bold text-uppercase" style="color: #FFD200;">@Model.FullName</h3>
                            <p class="mb-1 text-white-50"><i class="bi bi-award me-2"></i>@Model.Expertise</p>
                            <p class="mb-3 text-white-50"><i class="bi bi-envelope me-2"></i>@Model.Email</p>

                            <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <strong>Dikkat:</strong> Bu işlem geri alınamaz. Eğitmen silindiğinde ilişkili randevular da etkilenebilir.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer p-4 d-flex justify-content-between" style="background-color: #1a1a1a; border-top: 1px solid #333;">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill fw-bold">
                        <i class="bi bi-arrow-left me-2"></i> İPTAL ET
                    </a>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TrainerId" />
                        <button type="submit" class="btn btn-danger px-5 rounded-pill fw-bold shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i> EVET, SİL
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>