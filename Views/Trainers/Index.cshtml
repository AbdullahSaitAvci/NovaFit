@model IEnumerable<NovaFit.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörlerimiz"; 
}

<div class="container py-4"> 
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold">Antrenör Kadromuz</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Antrenör Ekle
            </a>
        }
    </div>

    @if (!Model.Any()) // hiç antrenör yoksa
    {
        <div class="alert alert-info text-center">
            Henüz kayıtlı antrenör bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div style="height: 250px; overflow: hidden; background-color: #f8f9fa;">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/img/trainers/default_coach.png" : item.ImageUrl)"
                                     class="card-img-top"
                                     alt="@item.FullName"
                                     style="height: 250px; object-fit: cover;"
                                     onerror="this.onerror=null;this.src='/img/trainers/default_coach.png';" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                    <span class="fs-1">👤</span>
                                </div>
                            }
                        </div>

                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-primary">@item.FullName</h5>
                            <p class="card-subtitle text-muted mb-2">@item.Expertise</p>
                            <p class="card-text small text-secondary">
                                @(item.Bio?.Length > 100 ? item.Bio.Substring(0, 100) + "..." : item.Bio)
                            </p>
                        </div>

                        <div class="card-footer bg-white border-top-0 text-center pb-3">
                            <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-outline-primary btn-sm rounded-pill px-3">Detaylar</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="mt-2 pt-2 border-top">
                                    <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-warning btn-sm py-0" style="font-size: 0.8rem;">Düzenle</a>
                                    <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-danger btn-sm py-0" style="font-size: 0.8rem;">Sil</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>